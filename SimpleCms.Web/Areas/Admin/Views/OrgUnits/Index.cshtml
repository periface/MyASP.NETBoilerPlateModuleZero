
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div id="ribbon">

    <span class="ribbon-button-alignment">
        <span id="refresh" class="btn btn-ribbon" data-action="resetWidgets" data-title="refresh" rel="tooltip" data-placement="bottom" data-original-title="<i class='text-warning fa fa-warning'></i> Warning! This will reset all your widget settings." data-html="true">
            <i class="fa fa-refresh"></i>
        </span>
    </span>

    <!-- breadcrumb -->
    <ol class="breadcrumb">
        <li>Admin</li>
        <li>@L("OrgUnits")</li>
    </ol>
    <!-- end breadcrumb -->
    <!-- You can also add more buttons to the
    ribbon for further usability

    Example below:

    <span class="ribbon-button-alignment pull-right">
    <span id="search" class="btn btn-ribbon hidden-xs" data-title="search"><i class="fa-grid"></i> Change Grid</span>
    <span id="add" class="btn btn-ribbon hidden-xs" data-title="add"><i class="fa-plus"></i> Add</span>
    <span id="search" class="btn btn-ribbon" data-title="search"><i class="fa-search"></i> <span class="hidden-mobile">Search</span></span>
    </span> -->

</div>
<div id="content">
    <div class="row">
        <div class="col-xs-12 col-sm-7 col-md-7 col-lg-4">
            <h1 class="page-title txt-color-blueDark">
                <i class="fa fa-list-alt fa-fw "></i>
                @L("OrgUnits")
                <span>
                    @L("OrgUnits_Msg")
                </span>
            </h1>
        </div>
    </div>
    <section id="widget-grid">
        <div class="row">
            <article class="col-sm-12 col-md-12 col-lg-7 sortable-grid ui-sortable">
                <div class="jarviswidget jarviswidget-sortable" id="wid-id-0" role="widget">
                    <header role="heading">

                        <h2>
                            @L("OrgUnits_Tree")
                        </h2>

                        <span class="jarviswidget-loader" style="display: none;"><i class="fa fa-refresh fa-spin"></i></span>

                    </header>
                    <div role="content">
                        <div class="widget-body">
                            @using (Html.BeginForm("Create", "OrgUnits", FormMethod.Post, new { id = "newOrgUnit" }))
                            {
                                <div class="row">
                                    <div class="col-sm-5 smart-form">
                                        <h2>@L("OrgUnits_Units")</h2>
                                        @Html.TextBox("Name", null, new { @class = "form-control", required = "required" })
                                    </div>
                                </div>
                                <br />
                                <div class="row">
                                    <div class="col-sm-12">
                                        <button type="submit" class="btn btn-primary" id="crear">@L("BtnCreate")</button>
                                    </div>
                                </div>
                            }
                            <div class="row">
                                <div class="col-lg-12 col-sm-12" id="tree">
                                    @{ Html.RenderAction("TreeView"); }
                                    <a data-name="CreatedOrganization" data-activeMessage="Subscribe to created Organization" data-inActiveMessage="Unsubscribe to created Organization" class="btn btn-xs btn-default notificationButton">Getting data...</a>
                                    <a data-name="EditedOrganization" data-activeMessage="Subscribe to edited Organization" data-inActiveMessage="Unsubscribe to edited Organization" class="btn btn-xs btn-default notificationButton">Getting data...</a>
                                    <a data-name="DeletedOrganization" data-activeMessage="Subscribe to deleted Organization" data-inActiveMessage="Unsubscribe to deleted Organization" class="btn btn-xs btn-default notificationButton">Getting data...</a>
                                </div>

                            </div>
                        </div>

                    </div>

                </div>
            </article>
            <div class="col-sm-12 col-md-12 col-lg-5">
                <div class="row">
                    <article class="col-sm-12 col-md-12 col-lg-12 sortable-grid ui-sortable">
                        <div class="jarviswidget jarviswidget-sortable" id="wid-id-1">
                            <header role="heading">
                                <h2>
                                    <strong>@L("Options")</strong>
                                </h2>
                                <span class="jarviswidget-loader"><i class="fa fa-refresh fa-spin"></i></span>
                            </header>
                            <div role="content">
                                <div class="widget-body">
                                    <div class="row" id="options">
                                        <div class="col-sm-12" id="optionsContainer">

                                            <h2 class="text-center">Please select an organization unit...</h2>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </article>
                    <article class="col-sm-12 col-md-12 col-lg-12 sortable-grid ui-sortable">
                        <div class="jarviswidget jarviswidget-sortable" id="wid-id-2">
                            <header role="heading">
                                <h2>
                                    <strong>@L("Users_Users")</strong> <span class="right" id="btnSec"></span>
                                </h2>
                                <span class="jarviswidget-loader"><i class="fa fa-refresh fa-spin"></i></span>
                            </header>
                            <div role="content">
                                <div class="widget-body">
                                    <div class="row" id="tableUsers">
                                        <div class="col-sm-12" id="tableContainer">

                                            <table id="usersTable"></table>
                                            <div id="pagination"></div>

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </article>

                </div>

            </div>
        </div>

    </section>

</div>

@section Scripts{
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <script src="~/Scripts/plugin/jquery-nestable/jquery.nestable.min.js"></script>
    <script src="~/Scripts/plugin/jqgrid/jquery.jqGrid.min.js"></script>
    <script src="~/Scripts/plugin/jqgrid/grid.locale-en.min.js"></script>
    <script src="~/Areas/Admin/Scripts/_orgUnits.js"></script>
}