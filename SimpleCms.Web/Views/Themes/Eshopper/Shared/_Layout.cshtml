@using System.Threading
@using System.Web.Optimization
<!DOCTYPE html>
<html lang="en">
<head>
    @{Html.RenderAction("GetSiteInformation","Layout");}
    @Styles.Render("~/Bundles/vendor/cssNoConflict")

    <link href="~/Views/Themes/Eshopper/Content/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Views/Themes/Eshopper/Content/css/font-awesome.min.css" rel="stylesheet" /> 
    <link href="~/Views/Themes/Eshopper/Content/css/prettyPhoto.css" rel="stylesheet" />
    <link href="~/Views/Themes/Eshopper/Content/css/price-range.css" rel="stylesheet" />
    <link href="~/Views/Themes/Eshopper/Content/css/animate.css" rel="stylesheet" />
    <link href="~/Views/Themes/Eshopper/Content/css/main.css" rel="stylesheet" />
    <link href="~/Views/Themes/Eshopper/Content/css/responsive.css" rel="stylesheet" />
    <!--[if lt IE 9]>
    <script src="js/html5shiv.js"></script>
    <script src="js/respond.min.js"></script>
    <![endif]-->
    <link rel="shortcut icon" href="images/ico/favicon.ico">
    <link rel="apple-touch-icon-precomposed" sizes="144x144" href="images/ico/apple-touch-icon-144-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="114x114" href="images/ico/apple-touch-icon-114-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="72x72" href="images/ico/apple-touch-icon-72-precomposed.png">
    <link rel="apple-touch-icon-precomposed" href="images/ico/apple-touch-icon-57-precomposed.png">
    @Styles.Render("~/Bundles/css")

    <!-- View specific styles -->
    @RenderSection("styles", required: false)

    <script type="text/javascript">
        //This is used to get the application's root path from javascript. It's useful if you're running application in a virtual directory under IIS.
        var abp = abp || {}; abp.appPath = '@ApplicationPath';
    </script>
    <title>@ViewBag.Title</title>
    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
        <script src="@Url.Content("~/Scripts/others/html5shiv.js")"></script>
        <script src="@Url.Content("~/Scripts/others/respond.min.js")"></script>
    <![endif]-->

    @Scripts.Render("~/Bundles/vendor/js/top")
    <style>
        body{
            padding-top:0;
        }
    </style>
</head>
<body>
    @Html.Partial("_TopBar")

<div class="container">
    @RenderBody()
</div>

    @Scripts.Render("~/Bundles/vendor/js/bottom")
    @Scripts.Render("~/Bundles/js")

    <script>
        //Localizing momentjs
        moment.locale('@Thread.CurrentThread.CurrentUICulture.Name');
    </script>

    <!-- Dynamic scripts of ABP system (They are created on runtime and can not be bundled) -->
    <script src="~/api/AbpServiceProxies/GetAll"></script>
    <script src="~/AbpScripts/GetScripts" type="text/javascript"></script>

    <!-- View specific scripts -->
    @RenderSection("scripts", required: false)
</body>
</html>
